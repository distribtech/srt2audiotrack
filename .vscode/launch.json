{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: srt2audiotrack (local)",
            "type": "debugpy",
            "request": "launch",
            "module": "srt2audiotrack",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "--subtitle",
                "local",
                "--output_folder",
                "local/output",
                "--debug"
            ],
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "SUBTITLE_FOLDER": "local"
            }
        },
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}